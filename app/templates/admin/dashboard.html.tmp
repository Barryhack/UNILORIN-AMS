{% extends 'admin/admin_base.html' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
<div class="min-h-screen">
    <!-- Welcome Section -->
    <div class="px-4 py-6 sm:px-0">
        <div class="bg-white/5 overflow-hidden shadow-lg rounded-xl backdrop-blur-sm border border-white/10">
            <div class="px-6 py-5">
                <h1 class="text-2xl font-semibold text-white">Welcome, {{ current_user.full_name }}!</h1>
                <p class="mt-1 text-gray-400">
                    {{ now.strftime('%A, %B %d, %Y') }} | System Administrator
                </p>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 px-4">
        <!-- Total Students -->
        <div class="bg-white/5 overflow-hidden shadow-lg rounded-xl backdrop-blur-sm border border-white/10 hover:bg-white/10 transition-colors">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-users text-blue-400 text-2xl"></i>
                        </div>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-400 truncate">
                                Total Students
                            </dt>
                            <dd class="mt-1 text-3xl font-semibold text-white">
                                {{ stats.total_students }}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Lecturers -->
        <div class="bg-white/5 overflow-hidden shadow-lg rounded-xl backdrop-blur-sm border border-white/10 hover:bg-white/10 transition-colors">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-chalkboard-teacher text-green-400 text-2xl"></i>
                        </div>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-400 truncate">
                                Total Lecturers
                            </dt>
                            <dd class="mt-1 text-3xl font-semibold text-white">
                                {{ stats.total_lecturers }}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Departments -->
        <div class="bg-white/5 overflow-hidden shadow-lg rounded-xl backdrop-blur-sm border border-white/10 hover:bg-white/10 transition-colors">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-building text-purple-400 text-2xl"></i>
                        </div>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-400 truncate">
                                Total Departments
                            </dt>
                            <dd class="mt-1 text-3xl font-semibold text-white">
                                {{ stats.total_departments }}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Courses -->
        <div class="bg-white/5 overflow-hidden shadow-lg rounded-xl backdrop-blur-sm border border-white/10 hover:bg-white/10 transition-colors">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-orange-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-book text-orange-400 text-2xl"></i>
                        </div>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-400 truncate">
                                Total Courses
                            </dt>
                            <dd class="mt-1 text-3xl font-semibold text-white">
                                {{ stats.total_courses }}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Tables Section -->
    <div class="mt-8 grid grid-cols-1 lg:grid-cols-2 gap-8 px-4">
        <!-- Department Stats -->
        <div class="bg-white/5 overflow-hidden shadow-lg rounded-xl backdrop-blur-sm border border-white/10">
            <div class="p-6">
                <h3 class="text-lg font-semibold text-white mb-4">Department Statistics</h3>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-white/10">
                        <thead>
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Department</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Students</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Lecturers</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-white/10">
                            {% for dept in departments %}
                            <tr class="hover:bg-white/5">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-white">{{ dept.name }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 py-1 text-xs font-medium bg-blue-500/20 text-blue-400 rounded-full">
                                        {{ dept.student_count }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 py-1 text-xs font-medium bg-green-500/20 text-green-400 rounded-full">
                                        {{ dept.lecturer_count }}
                                    </span>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white/5 overflow-hidden shadow-lg rounded-xl backdrop-blur-sm border border-white/10">
            <div class="p-6">
                <h3 class="text-lg font-semibold text-white mb-4">Quick Actions</h3>
                <div class="grid grid-cols-2 gap-4">
                    <a href="{{ url_for('admin.manage_users') }}" 
                       class="flex items-center p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors border border-white/10 group">
                        <div class="w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center group-hover:bg-blue-500/30 transition-colors">
                            <i class="fas fa-user-plus text-blue-400"></i>
                        </div>
                        <div class="ml-4">
                            <h4 class="text-white font-medium">Add User</h4>
                            <p class="text-sm text-gray-400">Create new accounts</p>
                        </div>
                    </a>

                    <a href="{{ url_for('admin.manage_departments') }}"
                       class="flex items-center p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors border border-white/10 group">
                        <div class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center group-hover:bg-green-500/30 transition-colors">
                            <i class="fas fa-building text-green-400"></i>
                        </div>
                        <div class="ml-4">
                            <h4 class="text-white font-medium">Add Department</h4>
                            <p class="text-sm text-gray-400">Create departments</p>
                        </div>
                    </a>

                    <a href="{{ url_for('admin.manage_courses') }}"
                       class="flex items-center p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors border border-white/10 group">
                        <div class="w-10 h-10 bg-purple-500/20 rounded-lg flex items-center justify-center group-hover:bg-purple-500/30 transition-colors">
                            <i class="fas fa-book text-purple-400"></i>
                        </div>
                        <div class="ml-4">
                            <h4 class="text-white font-medium">Add Course</h4>
                            <p class="text-sm text-gray-400">Create new courses</p>
                        </div>
                    </a>

                    <a href="#" 
                       class="flex items-center p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors border border-white/10 group">
                        <div class="w-10 h-10 bg-orange-500/20 rounded-lg flex items-center justify-center group-hover:bg-orange-500/30 transition-colors">
                            <i class="fas fa-cog text-orange-400"></i>
                        </div>
                        <div class="ml-4">
                            <h4 class="text-white font-medium">Settings</h4>
                            <p class="text-sm text-gray-400">System configuration</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add any JavaScript for dynamic updates here
});
</script>
{% endblock %}
